<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainHeader</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorMainHeader</item>
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="MainHeaderTextStyle">
        <item name="android:background">@color/colorMainHeader</item>
        <item name="android:paddingBottom">@dimen/margin_padding_12dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">@dimen/text_size_28sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainLayoutCommonStyle">
        <item name="android:layout_marginLeft">@dimen/margin_padding_24dp</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_24dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_24dp</item>
        <item name="android:background">@color/colorCommonLayoutBackground</item>
    </style>

    <style name="MainLabelTopicStyle">
        <item name="android:layout_marginBottom">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_6dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="MainTextDescStyle">
        <item name="android:layout_marginBottom">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_26sp</item>
    </style>

    <style name="MainTextSummaryStyle">
        <item name="android:layout_marginBottom">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_6dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_4dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="MainButtonAddSubStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonConfirmStyle">
        <item name="android:layout_marginLeft">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_4dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTextPoweredStyle">
        <item name="android:layout_marginTop">@dimen/margin_padding_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_16dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_24dp</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
