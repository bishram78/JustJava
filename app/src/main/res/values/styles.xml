<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainHeader</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorMainHeader</item>
        <item name="colorButtonNormal">@color/colorMainHeader</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="MainHeaderTextStyle">
        <item name="android:background">@color/colorMainHeader</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainLayoutCommonStyle">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#B7FFFFFF</item>
    </style>

    <style name="MainLabelTopic">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainTextDescStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MainTextSummaryStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainButtonAddSubStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonConfirmStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTextPoweredStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textColor">#24e9ff</item>
    </style>
</resources>
